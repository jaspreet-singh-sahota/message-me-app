<div class="comment">
  <a class="avatar">
    <img src="/images/avatar/small/matt.jpg">
  </a>
  <div class="content">
    <a class="author"> <%= message.user.username  %> </a>
    <div class="metadata">
      <span class="date"> <%= time_ago_in_words(message.created_at)%> </span>
    </div>
    <div class="text">
      <%= message.body %>
    </div>
  </div>
</div> 